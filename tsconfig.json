{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2020",
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "react/jsx-runtime"],
    "outDir": "lib/cjs"
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
